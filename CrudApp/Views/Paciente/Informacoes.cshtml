@model PacienteModel
@{
    ViewData["Title"] = "Informaçoes do Paciente";
}

<h1 class="display-4">Informações do Paciente</h1>
<br/>

<div>
    <form asp-controller="Paciente" asp-action="Informacao">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input asp-for="Nome" id="desabiltado" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label for="cpf">CPF</label>
        <input asp-for="Cpf" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label for="dataNascimento">Data de Nascimento</label>
        <input asp-for="DataNascimento" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label for="sexo">Gênero Sexual</label>
        <input asp-for="Sexo" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label for="telefone">Telefone de Contato</label>
        <input asp-for="Telefone" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input asp-for="Email" type="email" class="form-control">
    </div>

    <a class="btn btn-secondary" asp-controller="Paciente" asp-action="Index" role="button">Voltar</a>

</form>
</div>